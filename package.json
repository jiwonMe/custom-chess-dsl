{
  "name": "chesslang",
  "version": "0.1.0",
  "description": "A domain-specific language for defining chess variants",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "workspaces": [
    "chesslang-web"
  ],
  "bin": {
    "chesslang": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:web": "npm run build && cd chesslang-web && npm run build",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "chess",
    "dsl",
    "game",
    "language",
    "parser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
